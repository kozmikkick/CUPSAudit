<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:isScrollContainer="false"

    android:padding="10dp" >


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="16dp"
                    android:text="Customer View"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/txtcnotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Grade:"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/txtgradec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="30dp"
                    android:text="" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/cBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="19dp"
                    android:text="Building Exterior"
/>

                <TextView
                    android:id="@+id/txtcountc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:gravity="end"

                    android:text="" />

                <TextView
                    android:id="@+id/txtof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" of" />

                <TextView
                    android:id="@+id/txttotalc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/cBox2"
                    

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:text="Parking Lot"
    />

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/cBox3"
                     

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:text="Landscape"
 />

            </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <CheckBox
        android:id="@+id/cBox4"
             

            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
        android:text="Windows / Door Glass"
 />
        </TableRow>

            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
    <CheckBox
        android:id="@+id/cBox5"
         

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:text="Floors / Thresholds"
 />
            </TableRow>

            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
    <CheckBox
        android:id="@+id/cBox6"
         

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:text="Walls"
 />
            </TableRow>

            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
    <CheckBox
        android:id="@+id/cBox7"
         

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:text="Restrooms"
 />
            </TableRow>

            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
    <CheckBox
        android:id="@+id/cBox8"
         

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:text="Front Counter / Dining Room"
 />
            </TableRow>

            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
    <CheckBox
        android:id="@+id/cBox9"
         

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:text="BOH Appearance"
 />

            </TableRow>

            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <CheckBox
            android:id="@+id/cabove"
             

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:text="Above and Beyond"
/>


            </TableRow>
            <TableRow
                android:id="@+id/cabovetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/cnoteabove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/explain"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:ems="10"
                android:inputType="textMultiLine" />
            </TableRow>

            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            </TableRow>

            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/cfail"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:text="Non-Negotiables Were Present" />
            </TableRow>


            <TableRow

                android:id="@+id/cfailtable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/cnotesfail"
                    android:hint="@string/explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/cnotetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:text="Customer View Notes:"
                     />
            </TableRow>

            <TableRow

                android:id="@+id/cnotetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/cnote"
                    android:hint="@string/sectionnotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </TableRow>



        </TableLayout>


    </android.support.v4.widget.NestedScrollView>
